@model JobBoard.UI.MVC.Models.ContactViewModel



@{
    ViewBag.Title = "Email Confirmation";
}
<section class="section-hero overlay inner-page bg-image" style="background-image: url('images/hero_1.jpg');" id="home-section">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h1 class="text-white font-weight-bold">Contact Us</h1>
                <div class="custom-breadcrumbs">
                    <a href="/Home/Index">Home</a> <span class="mx-2 slash">/</span>
                    <span class="text-white"><strong>Contact Us</strong></span>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="site-section" id="next-section">
    <div class="container">
       
        
                <h2 class="h1Center">Email Confirmation</h2>


                <h4>We received the following message:<br /></h4>

                <p>@Model.Message</p><br />

                <h4><br />Thank you for contacting us! We'll respond as soon as we can to @Model.Email.</h4>

        </div> 


        </section>


        <div class="clear"></div>


    </div>
</section>



