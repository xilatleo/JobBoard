@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Details";
}
<section class="section-hero overlay inner-page bg-image" style="background-image: url('/Content/images/hero_1.jpg');" id="home-section">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h1 class="text-white font-weight-bold">@ViewBag.Title</h1>
                <div class="custom-breadcrumbs">
                    <a href="#">RolesAdmin</a> <span class="mx-2 slash">/</span>

                    <span class="text-white"><strong>@ViewBag.Title</strong></span>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="site-section" id="next-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 mb-5 mb-lg-0">
                <h2>Details.</h2>

                <div>
                    <h4>Roles.</h4>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                    </dl>
                </div>
                <h4>List of users in this role</h4>
                @if (ViewBag.UserCount == 0)
                {
                    <hr />
                    <p>No users found in this role.</p>
                }

                <table class="table">

                    @foreach (var item in ViewBag.Users)
                    {
                        <tr>
                            <td>
                                @item.UserName
                            </td>
                        </tr>
                    }
                </table>
                <p>
                    @Html.ActionLink("Edit", "Edit", new { id = Model.Id },new {@class="btn btn-primary" }) 
                    @Html.ActionLink("Back to List", "Index",null,new { @class="btn btn-secondary"})
                </p>
            </div>
        </div>
    </div>
</section>


